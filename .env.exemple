# --- Strava OAuth ---
STRAVA_CLIENT_ID=your_strava_app_client_id
STRAVA_CLIENT_SECRET=your_strava_app_client_secret
# Optional initial tokens
STRAVA_ACCESS_TOKEN=
STRAVA_REFRESH_TOKEN=
STRAVA_EXPIRES_AT=0

STRAVA_VERIFY_TOKEN=dev-verify

# Callback URL configurée côté Strava Developer
STRAVA_REDIRECT_URI=http://localhost:8000/auth/strava/callback

# --- Tokens Storage ---
TOKEN_FILE=tokens.json

PUBLIC_URL=http://localhost:8000

# --- Poke ---
POKE_API_KEY=your_poke_api_key
POKE_INBOUND_URL=https://poke.com/api/v1/inbound-sms/webhook

# --- Server ---
HOST=0.0.0.0
PORT=8000
